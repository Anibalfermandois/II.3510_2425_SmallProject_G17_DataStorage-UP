<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for the EditText fields -->
    <style name="EditTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">#6200EA</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Style for the Button elements -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">#6200EA</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Style for the TextView that displays the retrieved value -->
    <style name="DisplayTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for the main container layout -->
    <style name="MainLayoutStyle">
        <item name="android:padding">24dp</item>
        <item name="android:background">#F2F2F2</item>
    </style>
</resources>